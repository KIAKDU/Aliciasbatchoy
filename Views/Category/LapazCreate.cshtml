@model CategoryDto
@{
}


<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Category (Alicias Lapaz)</h2>

        <form asp-action="LapazCreate" method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col col-form-label">Category Code</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="CategoryCode" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col col-form-label">Category</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Category" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Active</label>
                <div class="col-sm-8">
                    <select class="form-sheet" asp-for="Active">
                        <option value="TRUE">TRUE</option>
                        <option value="FALSE">FALSE</option>

                    </select>
                </div>
            </div>
            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Category" asp-action="LapazIndex" role="Button">
                        Cancel
                    </a>
                </div>

            </div>

        </form>
    </div>
</div>
