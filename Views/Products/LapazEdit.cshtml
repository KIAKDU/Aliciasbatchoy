@model ProductDto
@{
}
<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Edit Product (Alicias Lapaz)</h2>

        <form asp-action="LapazEdit" method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col col-form-label">Product Code</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["ProductCode"]" />
                    <!-- Hidden field for ProductCode to include it in the POST data -->
                    <input type="hidden" asp-for="ProductCode" value="@ViewData["ProductCode"]" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col col-form-label">Product Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Product" required />
                    <span asp-validation-for="Product" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <select asp-for="SelectedCategoryCode" asp-items="Model.Categories" class="form-control">
                        <option value="">-- Select a Category --</option>
                    </select>
                    <span asp-validation-for="SelectedCategoryCode" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Active</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="Active">
                        <option value="TRUE">TRUE</option>
                        <option value="FALSE">FALSE</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Selling Price</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="SellingPrice" required />
                    <span asp-validation-for="SellingPrice" class="text-danger"></span>
                </div>
            </div>
            @*
            <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Created At</label>
            <div class="col-sm-8">
            <input class="form-control-plaintext" readonly value="@ViewData["CreatedAt"]" />
            </div>
            </div>
            *@
            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Products" asp-action="LapazIndex" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
