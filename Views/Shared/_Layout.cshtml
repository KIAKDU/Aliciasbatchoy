<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AliciasWebDisplay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AliciasWebDisplay.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">

    <!-- For 32x32 and 16x16 icons -->
    <link rel="icon" href="~/Images/AliciasLogo.jpg" sizes="16x16 32x32" type="image/x-icon" />

    <!-- For Apple Touch Icons (used on iPhones, iPads) -->
    <link rel="apple-touch-icon" href="~/Images/AliciasLogo.jpg" sizes="180x180" />

    <!-- For Android devices -->
    <link rel="icon" href="~/Images/AliciasLogo.jpg" sizes="192x192" type="image/png" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Alicias Batchoy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @if (Context.Session.GetString("UserCode") != null)
                {
                    <div class="dropdown me-1">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="aliciasDropdown1" data-bs-toggle="dropdown" aria-expanded="false">
                            Products List
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="aliciasDropdown1">
                            <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index">Alicias Main</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Lapaz">Alicias Lapaz</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Villa">Alicias Villa</a></li>
                        </ul>
                    </div>

                
                }
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FaceBook Page - <a href="https://www.facebook.com/profile.php?id=61553693961401">Alicia’s Special Batchoy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
