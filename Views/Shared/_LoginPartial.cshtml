@{
    var UserCode = Context.Session.GetString("UserCode");
    var UserName = Context.Session.GetString("UserName");
    var IsAdmin = Context.Session.GetString("IsAdmin"); // Check if the user is an admin
}

<ul class="navbar-nav">
    @if (!string.IsNullOrEmpty(UserCode))
    {
        <li class="nav-item">
            @if (!string.IsNullOrEmpty(IsAdmin) && IsAdmin == "True") // Only admins get a link
            {
                <a class="nav-link fw-bold text-primary" asp-controller="Admin" asp-action="Index">Welcome, @UserName!</a>
            }
            else
            {
                <span class="nav-link">Welcome, @UserName!</span>
            }
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" method="post" asp-controller="Auth" asp-action="Logout">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
            </form>
        </li>
    }
</ul>
