@model IEnumerable<AliciasWebDisplay.Models.SOHDto>
<link rel="stylesheet" href="~/css/stock.css" />

<!-- Sticky Header Section -->
<div class="sticky-top bg-white shadow-sm p-3 mb-4">
    <h2 class="mb-0">
        ALICIAS LAPAZ
        <br />
        STOCK VIEW
    </h2>
    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-info">
            @TempData["AlertMessage"]
        </div>
    }
    <div class="row mt-3">
        <div class="col-md-6">
            <form class="d-flex" asp-action="LapazSOHIndex" method="get" asp-controller="StockOnHand">
                <label for="searchInput" class="visually-hidden">Search Products</label>
                <input id="searchInput" name="searchString" class="form-control me-2 form-control-sm" type="search" placeholder="Enter Stock Code or Product Name" aria-label="Search" />
                <button type="submit" class="btn btn-primary btn-sm">SEARCH</button>
            </form>
            <div class="mt-2">
                <a asp-action="SOHIndex" class="btn btn-secondary btn-sm">FULL LIST</a>
                <a class="btn btn-outline-primary btn-sm" asp-controller="Products" asp-action="LapazIndex" role="Button">BACK</a>
            </div>
        </div>
    </div>
</div>

<!-- Scrollable Table with Sticky Header -->
<div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
    <table class="table table-bordered table-hover text-center">
        <thead class="table-light sticky-header">
            <tr>
                <th>StockOnHandCode</th>
                <th>ProductCode</th>
                <th>Product</th>
                <th>StockOnHand</th>
                <th>UnitCost</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stockOnHand in Model)
            {
                <tr>
                    <td>@stockOnHand.StockOnHandCode</td>
                    <td>@stockOnHand.ProductCode</td>
                    <td>@stockOnHand.Product</td>
                    <td>@stockOnHand.StockOnHand</td>
                    <td>@stockOnHand.UnitCost</td>
                </tr>
            }
        </tbody>
    </table>
</div>
